<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:orientation="horizontal">

    <com.ifenduo.mahattan_x.widget.CustomProgressView
        android:id="@+id/progress_view_item_depth_chart"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:alpha="0.2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_item_depth_chart_no"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="1"
            android:textColor="#FF6960"
            android:textSize="@dimen/textSize12" />

        <TextView
            android:id="@+id/text_item_depth_chart_price"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginRight="4dp"
            android:layout_weight="7"
            android:gravity="right|center"
            android:textColor="#FF6960"
            android:textSize="@dimen/textSize12"
            tools:text="8104.76" />

        <TextView
            android:id="@+id/text_item_depth_chart_num"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="7"
            android:gravity="right|center"
            android:paddingRight="12dp"
            android:textColor="#8F8F8F"
            android:textSize="@dimen/textSize12"
            tools:text="111.312" />
    </LinearLayout>
</merge>