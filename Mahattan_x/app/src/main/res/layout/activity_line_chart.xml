<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_page_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar" />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tl_indicator_margin_top="4dp"
        app:tl_iconVisible="false"
        app:tl_indicator_width="50dp"
        app:tl_tab_width="50dp"
        app:tl_indicator_color="@color/colorTabTextSelected"
        app:tl_textSelectColor="@color/colorTabTextSelected"
        app:tl_textUnselectColor="@color/colorTabTextNormal"
        app:tl_textsize="12sp" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>