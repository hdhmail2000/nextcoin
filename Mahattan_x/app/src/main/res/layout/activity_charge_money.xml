<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_page_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar"></include>

    <RelativeLayout
        android:layout_width="216dp"
        android:layout_height="216dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/image_qr_code"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            tools:src="@drawable/image_qr_code" />

    </RelativeLayout>


    <TextView
        android:id="@+id/text_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="10sp"
        tools:text="0xs1dasadasd651sa6d51651asd65sad1" />

    <TextView
        android:id="@+id/text_copy_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="复制钱包地址"
        android:textColor="@color/colorBlueText"
        android:textSize="12sp" />




</LinearLayout>
