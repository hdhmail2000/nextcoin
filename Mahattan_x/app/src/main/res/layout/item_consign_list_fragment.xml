<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/text_item_consign_list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#4EE2FE"
        android:textSize="@dimen/textSize14"
        tools:text="BTC/USDT" />

    <TextView
        android:id="@+id/text_item_consign_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_item_consign_list_title"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorGrayText"
        android:textSize="@dimen/textSize12"
        tools:text="2018-01-26 17:05:31" />

    <TextView
        android:id="@+id/text_item_consign_list_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_item_consign_list_time"
        android:layout_alignParentRight="true"
        android:textColor="#4EE2FE"
        android:textSize="@dimen/textSize12"
        tools:text="买入" />

    <TextView
        android:id="@+id/text_item_consign_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_item_consign_list_time"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize12"
        tools:text="$434.09" />

    <TextView
        android:id="@+id/text_item_consign_list_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_item_consign_list_price"
        android:layout_alignParentRight="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize12"
        tools:text="$434.09" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_item_consign_list_price"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_item_consign_list_sum_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="117"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/textSize12"
            tools:text="总额度 40000.00" />

        <TextView
            android:id="@+id/text_item_consign_list_sum_turnover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="149"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/textSize10"
            tools:text="总额度 40000.00" />

        <TextView
            android:id="@+id/text_item_consign_list_sum_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="停止委托"
            android:textColor="#4EE2FE"
            android:textSize="@dimen/textSize10" />
    </LinearLayout>


</RelativeLayout>