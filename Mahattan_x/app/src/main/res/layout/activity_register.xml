<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_page_bg"
    tools:context=".controller.login.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/image_login_header_" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/phone_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="手机号"
                android:inputType="phone"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:id="@+id/clear_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_clear_edit" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#363672" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="手机验证码"
                android:inputType="number"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/textSize14" />

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:background="#363672" />

            <TextView
                android:id="@+id/get_code_text_view"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:enabled="true"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/color_code_text"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#363672" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="密码"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:singleLine="true"
                android:textColorHint="@color/colorTextHint"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:id="@+id/eye_button"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/selector_eye" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#363672" />

        <EditText
            android:id="@+id/invitation_edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:hint="邀请码（选填）"
            android:inputType="phone"
            android:singleLine="true"
            android:maxLength="11"
            android:textColorHint="@color/colorTextHint"
            android:textSize="@dimen/textSize14" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#363672" />

        <Button
            android:id="@+id/submit_button"
            style="@style/SubmitButton"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_login_button_bg"
            android:text="注册" />

        <TextView
            android:id="@+id/login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:gravity="center_horizontal"
            android:padding="16dp"
            android:text="登录"
            android:textColor="@color/colorBlueText"
            android:textSize="@dimen/textSize12" />
    </LinearLayout>
</ScrollView>