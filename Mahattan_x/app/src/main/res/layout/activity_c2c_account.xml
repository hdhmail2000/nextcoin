<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_page_bg"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar" />

    <RelativeLayout
        android:id="@+id/bank_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="#363672">

        <TextView
            android:id="@+id/bank_account_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            tools:text="杨雪峰" />

        <TextView
            android:id="@+id/bank_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bank_account_name_text_view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@id/bank_account_name_text_view"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize14"
            tools:text="中国农业银行（重庆支行）" />

        <TextView
            android:id="@+id/bank_account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bank_account_name_text_view"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize12"
            tools:text="5675 5675 5674 5686 123" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/bank_account_text_view"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="16dp"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/bank_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bank_account_text_view"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/ic_c2c_account_delete"
            android:drawablePadding="6dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/alipay_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="#363672">

        <TextView
            android:id="@+id/alipay_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="支付宝"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/alipay_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/alipay_title_text_view"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14"
            tools:text="杨雪峰" />

        <TextView
            android:id="@+id/alipay_account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/alipay_title_text_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12"
            tools:text="5675 5675 5674 5686 123" />

        <ImageView
            android:id="@+id/alpay_qr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/alipay_account_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/alipay_title_text_view"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/icon_qr_pay" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/alipay_account_text_view"
            android:layout_alignTop="@id/alipay_title_text_view"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/alpay_qr"
            android:background="@color/colorDivider" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/alipay_account_text_view"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/alipay_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/alipay_account_text_view"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/ic_c2c_account_delete"
            android:drawablePadding="6dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="#363672">

        <TextView
            android:id="@+id/wechat_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="微信"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/wechat_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/wechat_title_text_view"
            tools:text="杨雪峰"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize14" />

        <TextView
            android:id="@+id/wechat_account_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/wechat_title_text_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            tools:text="5675 5675 5674 5686 123"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textSize12" />

        <ImageView
            android:id="@+id/wechat_qr"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/wechat_account_text_view"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/wechat_title_text_view"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/icon_qr_pay" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/wechat_account_text_view"
            android:layout_alignTop="@id/wechat_title_text_view"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@id/wechat_qr"
            android:background="@color/colorDivider" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/wechat_account_text_view"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/colorDivider" />

        <TextView
            android:id="@+id/wechat_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/wechat_account_text_view"
            android:layout_marginTop="17dp"
            android:drawableLeft="@drawable/ic_c2c_account_delete"
            android:drawablePadding="6dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/text_add_account"
        style="@style/SubmitButton"
        android:background="@drawable/selector_login_button_bg"
        android:gravity="center"
        android:text="添加收款账号" />
</LinearLayout>