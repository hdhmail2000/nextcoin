<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/city_container"
        android:layout_width="match_parent"
        android:layout_height="380dp">

        <com.ifenduo.mahattan_x.widget.CityLayout
            android:id="@+id/city_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/animation_mine_header" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_round_363672"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="当前算力"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textSize12" />

            <TextView
                android:id="@+id/calculate_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:hint="--"
                android:textColor="@color/colorBlueText"
                android:textColorHint="@color/colorBlueText"
                android:textSize="@dimen/textSize14"
                android:textStyle="bold" />
        </LinearLayout>


        <ImageView
            android:id="@+id/task_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="14dp"
            android:src="@drawable/ic_task" />

        <ImageView
            android:id="@+id/invite_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_invite" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <com.ifenduo.lib_banner.Banner
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        app:indicator_drawable_selected="@drawable/ic_banner_indicator"
        app:indicator_drawable_unselected="@drawable/ic_banner_indicator_"
        android:layout_height="100dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorDivider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:text="挖矿记录"
        android:textColor="#4B4B80"
        android:textSize="12sp" />
</LinearLayout>