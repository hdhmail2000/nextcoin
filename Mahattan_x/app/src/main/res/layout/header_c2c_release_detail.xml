<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/selector_transaction_button_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="26dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize16"
            tools:text="购买ETH" />

        <TextView
            android:id="@+id/success_num_hint_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="4dp"
            android:text="已成交量（ETH）"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/textSize10" />

        <TextView
            android:id="@+id/success_num_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorWhite"
            android:textSize="28sp"
            android:textStyle="bold"
            tools:text="276.3131" />

        <TextView
            android:id="@+id/sum_num_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="2dp"
            android:text="买入总量(ETH)：3678.1350"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/textSize10" />
    </LinearLayout>
</LinearLayout>