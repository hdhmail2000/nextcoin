<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize12"
        tools:text="melonkey" />

    <TextView
        android:id="@+id/remainder_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/name_text_view"
        android:layout_toRightOf="@id/name_text_view"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textSize12"
        tools:text="(65|55%)" />

    <ImageView
        android:id="@+id/level_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/remainder_text_view"
        android:layout_alignTop="@id/remainder_text_view"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/remainder_text_view"
        android:scaleType="centerInside"
        tools:src="@drawable/ic_diamond_red" />

    <TextView
        android:id="@+id/num_text_view_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_text_view"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:ems="6"
        android:text="数量:"
        android:textColor="@color/colorGrayText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/num_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/num_text_view_"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/num_text_view_"
        android:text="0.135000 BTC"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/price_text_view_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num_text_view_"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:ems="6"
        android:text="单价:"
        android:textColor="@color/colorGrayText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/price_text_view_"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/price_text_view_"
        android:text="0.135000 BTC"
        android:textColor="#4EE2FE"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/min_num_text_view_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text_view_"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="4dp"
        android:ems="6"
        android:text="最小购买量："
        android:textColor="@color/colorGrayText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/min_num_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/min_num_text_view_"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/min_num_text_view_"
        android:text="0.135000 BTC"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="80dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/min_num_text_view_"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="14dp"
        android:background="@drawable/selector_login_button_bg"
        android:text="卖出"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignTop="@id/submit_button"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bank_card_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_bank_card_" />

        <ImageView
            android:id="@+id/alipay_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_alipay_" />

        <ImageView
            android:id="@+id/wechat_image_view"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_wechat_" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/submit_button"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"
        android:background="@color/colorDivider" />

</RelativeLayout>